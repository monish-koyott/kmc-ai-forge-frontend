@rendermode InteractiveServer

<div class="workflow-sidebar">
    <h3 class="sidebar-title">Workflow Progress</h3>
    
    <div class="workflow-steps">
        <div class="workflow-step @(CurrentStep == 1 ? "active" : "pending") @(CurrentStep == 1 ? "clickable" : "")" 
             @onclick="() => SetActiveStep(1)">
            <div class="step-number">1</div>
            <div class="step-content">
                <h4 class="step-title">Document Upload</h4>
                <p class="step-subtitle">Upload required documents</p>
                <span class="step-status">Active</span>
            </div>
        </div>
        
        <div class="workflow-step @(CurrentStep == 2 ? "active" : "pending") @(CurrentStep == 2 ? "clickable" : "")" 
             @onclick="() => SetActiveStep(2)">
            <div class="step-number">2</div>
            <div class="step-content">
                <h4 class="step-title">Results & Review</h4>
                <p class="step-subtitle">Review validation results</p>
                <span class="step-status">Pending</span>
            </div>
        </div>
    </div>
</div>
